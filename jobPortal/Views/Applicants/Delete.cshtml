@model JobPortal.Models.Applicant
@{
    ViewData["Title"] = "Delete Applicant";
}
<div class="card bg-dark text-light shadow p-4 mx-auto" style="max-width: 600px;">
    <h3 class="text-danger mb-3">Are you sure you want to delete this applicant?</h3>
    <p><strong>Name:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Job:</strong> @Model.JobPosition?.Title</p>
    <form asp-controller="Applicants" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
