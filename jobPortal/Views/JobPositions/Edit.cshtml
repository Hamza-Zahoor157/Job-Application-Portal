@model JobPortal.Models.JobPosition

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 bg-dark bg-opacity-75 p-4 rounded shadow text-white">
            <h2 class="mb-4 text-center">Edit Job</h2>

            @if (TempData["ValidationErrors"] != null)
            {
                <div class="alert alert-danger">Validation Errors: @TempData["ValidationErrors"]</div>
            }

            @if (TempData["DatabaseError"] != null)
            {
                <div class="alert alert-danger">Database Error: @TempData["DatabaseError"]</div>
            }

            <form asp-controller="JobPositions" asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Salary" class="form-label"></label>
                    <input asp-for="Salary" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
                    <input type="submit" value="Edit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
