@model IEnumerable<JobPortal.Models.JobPosition>

@{
    ViewData["Title"] = "Top Positions";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-4" style="background: rgba(30, 34, 45, 0.85); backdrop-filter: blur(6px);">
            <div class="card-header bg-primary text-white rounded-top-4" style="background: linear-gradient(90deg, #258cfb 60%, #1e222d 100%);">
                <h3 class="mb-0 fw-bold" style="letter-spacing: 1px;">Top 5 Positions by Applications</h3>
            </div>
            <ul class="list-group list-group-flush">
                @if (!Model.Any())
                {
                    <li class="list-group-item text-center bg-transparent text-light border-0">No job positions found.</li>
                }
                else
                {
                    foreach (var pos in Model)
                    {
                        var appCount = pos.Applicants != null ? pos.Applicants.Count : 0;
                        <li class="list-group-item d-flex justify-content-between align-items-center fs-5 bg-transparent text-light border-0" style="border-bottom: 1px solid rgba(255,255,255,0.08) !important;">
                            <span class="fw-semibold">@pos.Title</span>
                            <span class="badge bg-gradient bg-info text-dark rounded-pill px-4 py-2 fs-6 shadow-sm">@appCount application@(appCount == 1 ? "" : "s")</span>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</div> 