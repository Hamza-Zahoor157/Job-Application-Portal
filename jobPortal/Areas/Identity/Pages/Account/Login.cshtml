@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card bg-dark text-light shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 1rem;">
        <h2 class="text-center mb-4 fw-bold"><span style="color:#258cfb;">Login</span> to Account</h2>
            <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>
                <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control bg-dark text-light border-secondary" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control bg-dark text-light border-secondary" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                <label asp-for="Input.RememberMe" class="form-check-label">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            <button id="login-submit" type="submit" class="w-100 btn btn-primary rounded-pill mb-2" style="background: linear-gradient(90deg, #258cfb 60%, #0056b3 100%); border: none;">Log in</button>
            </form>
        <div class="text-center mt-3">
            <span>Don't have an account?</span>
            <a asp-area="Identity" asp-page="/Account/Register" class="fw-bold text-primary ms-1">Register here</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
