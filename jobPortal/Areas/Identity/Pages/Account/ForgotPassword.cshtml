@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card bg-dark text-light shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 1rem;">
        <h2 class="text-center mb-4 fw-bold"><span style="color:#258cfb;">Forgot</span> Password</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control bg-dark text-light border-secondary" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-primary rounded-pill mb-2" style="background: linear-gradient(90deg, #258cfb 60%, #0056b3 100%); border: none;">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
